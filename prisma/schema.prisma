generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  settings        UserSettings?
  foodEntries     FoodEntry[]
  exerciseEntries ExerciseEntry[]
  weightEntries   WeightEntry[]
  digests         Digest[]
  streak          Streak?
  customFoods     CustomFood[]
  savedMeals      SavedMeal[]
  waterEntries    WaterEntry[]
}

model UserSettings {
  id                 String  @id @default(cuid())
  userId             String  @unique
  user               User    @relation(fields: [userId], references: [id])
  calorieGoal        Int     @default(2000)
  proteinTarget      Float   @default(150)
  carbTarget         Float   @default(250)
  fatTarget          Float   @default(65)
  macroUnit          String  @default("grams")
  weightUnit         String  @default("lbs")
  activityLevel      String  @default("moderate")
  waterUnit          String  @default("oz")
  waterGoal          Int     @default(64)
  llmProvider        String  @default("claude")
  onboardingComplete Boolean @default(false)
  welcomeMessage     String?
  emptyStateMessage  String?
}

model FoodEntry {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  date        DateTime @default(now())
  mealType    String
  foodName    String
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  fiber       Float?
  entryMethod String
  isEstimate  Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model ExerciseEntry {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  date              DateTime @default(now())
  activity          String
  durationMinutes   Int
  estimatedCalories Float
  isEstimate        Boolean  @default(true)
  notes             String?
  createdAt         DateTime @default(now())
}

model WeightEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @default(now())
  weight    Float
  unit      String
  createdAt DateTime @default(now())
}

model Digest {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  date        DateTime
  type        String
  content     String
  generatedAt DateTime @default(now())
}

model Streak {
  id             String    @id @default(cuid())
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id])
  currentStreak  Int       @default(0)
  longestStreak  Int       @default(0)
  lastLoggedDate DateTime?
}

model CustomFood {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  foodName    String
  servingSize String   @default("1 serving")
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  fiber       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SavedMeal {
  id                 String          @id @default(cuid())
  userId             String
  user               User            @relation(fields: [userId], references: [id])
  name               String
  items              SavedMealItem[]
  lastLoggedAt       DateTime?
  lastLoggedMealType String?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
}

model SavedMealItem {
  id          String    @id @default(cuid())
  savedMealId String
  savedMeal   SavedMeal @relation(fields: [savedMealId], references: [id], onDelete: Cascade)
  foodName    String
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  fiber       Float?
  quantity    Float     @default(1)
}

model WaterEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @default(now())
  ounces    Int
  createdAt DateTime @default(now())
}
